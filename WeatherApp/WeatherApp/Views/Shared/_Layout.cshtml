<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - HavaDurumu.net</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/weatherapp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-dark border-bottom box-shadow mb-3" style="background-color: #2C3E50;">
            <div class="container-fluid">
                <a class="navbar-brand text-white mx-auto" asp-area="" asp-controller="Home" asp-action="Index" style="font-size: 24px; font-weight: bold; text-align: center; display: block;">
                    Havadurumu.net
                </a>

                <div class="sun-icon" style="position: absolute; top: 10px; right: 20px;">
                    <img src="~/images/sun-solid.svg" alt="Sun" class="sun-icon" style="width: 40px; height: 40px;" />
                </div>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
    </header>

    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #22628C;">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                <span class="navbar-toggler-icon"></span>
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav flex-grow-1 text-center">
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Anasayfa</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="WeeklyForecast">Haftalık Tahmin</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="About">Hakkında</a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Details">Detaylı Arama</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>



    <main role="main" class="py-4">
        @RenderBody() <!-- Sayfa içeriği buraya yerleştirilecek -->
    </main>

    <div class="tab-content mt-4">
        <div id="home" class="tab-pane fade">
            <h3>Ana Sayfa</h3>
            <p>Burada hava durumu görüntüleniyor.</p>
        </div>
        <div id="forecast" class="tab-pane fade">
            <h3>Haftalık Hava Durumu</h3>
            <p>Burada haftalık hava durumu tahminini göstereceğiz.</p>
        </div>
        <div id="about" class="tab-pane fade">
            <h3>Hakkında</h3>
            <p>İletişim bilgileri ve uygulama hakkında bilgiler burada olacak.</p>
        </div>
    </div>

    <!-- Bootstrap JS ve bağımlı script dosyaları -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Aktivasyon için kendi JavaScript kodumuz -->
    <script>
        var myTab = new bootstrap.Tab(document.querySelector('#home-tab'));
        myTab.show();
    </script>
</body>
</html>
